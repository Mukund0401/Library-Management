<?xml version="1.0" encoding='utf-8' ?>
<odoo>
	<record model="ir.ui.view" id="selection_wizard_form_view">
        <field name="name">selection.wizard.form.view</field>
        <field name="model">selection.wizard</field>
        <field name="arch" type="xml">
            <form>
            	<sheet>
                    <group>
                	   <field name="first_name" invisible="context.get('data') in ('india',True)"/>
                	   <field name="mid_name" invisible="context.get('data')=='pakistan'"/>
                	   <field name="last_name"/>
                   </group>
                </sheet>
                <footer>
                	<button special='cancel' string='cancel' class=
            		'btn-secondary'/>
            		<button name='action_confrom' string="Confirm"
        			class='btn-primary'/>
                </footer>
            </form>
        </field>
    </record>
</odoo>